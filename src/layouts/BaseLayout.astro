---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Entspannte Kindergeburtstage mit warmen Farben, ruhigen Spielen und einfachen Rezepten. Checklisten und Tipps für stressfreie Feiern." } = Astro.props;
---

<html lang="de" class="font-body">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    
    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Kindergeburtstag Ideen",
        "description": {description}
      }
    </script>
  </head>
  <body class="bg-bg text-ink">
    <!-- Navigation -->
    <nav class="bg-paper/80 backdrop-blur-sm border-b border-sand/30 sticky top-0 z-50">
      <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="font-display text-xl font-bold text-ink hover:text-accent transition-colors">
              Kindergeburtstag
            </a>
          </div>
          
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="/" class="font-body text-ink hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">
                Start
              </a>
              <a href="/spiele" class="font-body text-muted hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">
                Spiele
              </a>
              <a href="/deko" class="font-body text-muted hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">
                Deko
              </a>
              <a href="/rezepte" class="font-body text-muted hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">
                Rezepte
              </a>
              <a href="/checklisten" class="font-body text-muted hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">
                Checklisten
              </a>
              <a href="/blog" class="font-body text-muted hover:text-accent px-3 py-2 rounded-md text-sm font-medium transition-colors">
                Blog
              </a>
            </div>
          </div>
          
          <!-- Mobile menu button -->
          <div class="md:hidden">
            <button
              id="mobile-menu-button"
              class="text-muted hover:text-accent inline-flex items-center justify-center p-2 rounded-md focus:outline-none focus:ring-2 focus:ring-accent"
            >
              <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Mobile menu -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="px-2 pt-2 pb-3 space-y-1">
            <a href="/" class="font-body text-ink hover:text-accent block px-3 py-2 rounded-md text-base font-medium transition-colors">
              Start
            </a>
            <a href="/spiele" class="font-body text-muted hover:text-accent block px-3 py-2 rounded-md text-base font-medium transition-colors">
              Spiele
            </a>
            <a href="/deko" class="font-body text-muted hover:text-accent block px-3 py-2 rounded-md text-base font-medium transition-colors">
              Deko
            </a>
            <a href="/rezepte" class="font-body text-muted hover:text-accent block px-3 py-2 rounded-md text-base font-medium transition-colors">
              Rezepte
            </a>
            <a href="/checklisten" class="font-body text-muted hover:text-accent block px-3 py-2 rounded-md text-base font-medium transition-colors">
              Checklisten
            </a>
            <a href="/blog" class="font-body text-muted hover:text-accent block px-3 py-2 rounded-md text-base font-medium transition-colors">
              Blog
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-paper border-t border-sand/30">
      <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 py-12">
        <div class="grid md:grid-cols-4 gap-8">
          <div class="md:col-span-2">
            <h3 class="font-display text-lg font-semibold text-ink mb-4">
              Kindergeburtstag Ideen
            </h3>
            <p class="font-body text-muted mb-4 max-w-md">
              Entspannte Kindergeburtstage mit warmen Farben, ruhigen Spielen und einfachen Rezepten.
            </p>
          </div>
          
          <div>
            <h4 class="font-body font-semibold text-ink mb-4">Navigation</h4>
            <ul class="space-y-2">
              <li><a href="/spiele" class="font-body text-muted hover:text-accent transition-colors">Spiele</a></li>
              <li><a href="/deko" class="font-body text-muted hover:text-accent transition-colors">Deko</a></li>
              <li><a href="/rezepte" class="font-body text-muted hover:text-accent transition-colors">Rezepte</a></li>
              <li><a href="/checklisten" class="font-body text-muted hover:text-accent transition-colors">Checklisten</a></li>
            </ul>
          </div>
          
          <div>
            <h4 class="font-body font-semibold text-ink mb-4">Mehr</h4>
            <ul class="space-y-2">
              <li><a href="/blog" class="font-body text-muted hover:text-accent transition-colors">Blog</a></li>
              <li><a href="#" class="font-body text-muted hover:text-accent transition-colors">Kontakt</a></li>
              <li><a href="#" class="font-body text-muted hover:text-accent transition-colors">Impressum</a></li>
            </ul>
          </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-sand/30 text-center">
          <p class="font-body text-muted text-sm">
            © 2024 Kindergeburtstag Ideen. Mit ❤️ für entspannte Feiern.
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      }
    </script>
  </body>
</html>