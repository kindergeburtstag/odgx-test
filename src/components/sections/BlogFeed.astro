---
interface Props {
  title: string;
  limit?: number;
}

const { title, limit = 3 } = Astro.props;

// Mock blog posts - in real app would fetch from content collection
const posts = [
  {
    title: "Kindergeburtstag ohne Stress: 5 bewährte Tipps",
    excerpt: "So planst du eine entspannte Feier, die allen Spaß macht.",
    date: "2024-01-15",
    slug: "kindergeburtstag-ohne-stress",
    image: "https://images.unsplash.com/photo-1530103862676-de8c9debad1d?w=400&h=250&fit=crop&crop=center"
  },
  {
    title: "Natürliche Deko-Ideen für den Kindergeburtstag",
    excerpt: "Warme Farben und nachhaltige Materialien für eine gemütliche Atmosphäre.",
    date: "2024-01-10",
    slug: "natuerliche-deko-ideen",
    image: "https://images.unsplash.com/photo-1464349095431-e9a21285b5f3?w=400&h=250&fit=crop&crop=center"
  },
  {
    title: "Einfache Rezepte für kleine Feinschmecker",
    excerpt: "Leckere Snacks und Kuchen, die Kinder lieben und Eltern entspannt zubereiten.",
    date: "2024-01-05",
    slug: "einfache-rezepte",
    image: "https://images.unsplash.com/photo-1578985545062-69928b1d9587?w=400&h=250&fit=crop&crop=center"
  }
].slice(0, limit);
---

<section class="bg-bg">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 py-12 md:py-16">
    <h2 class="font-display text-3xl md:text-4xl font-bold text-ink tracking-tight text-center mb-12">
      {title}
    </h2>
    
    {posts.length > 0 ? (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {posts.map((post) => (
          <article class="bg-paper rounded-2xl shadow-sm hover:shadow-md transition-shadow overflow-hidden">
            {post.image && (
              <img
                src={post.image}
                alt={post.title}
                class="w-full h-48 object-cover"
                loading="lazy"
              />
            )}
            
            <div class="p-6">
              <time class="font-body text-sm text-muted">
                {new Date(post.date).toLocaleDateString('de-DE', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
              
              <h3 class="font-body text-xl font-semibold text-ink mt-2 mb-3">
                <a href={`/blog/${post.slug}`} class="hover:text-accent transition-colors">
                  {post.title}
                </a>
              </h3>
              
              <p class="font-body text-muted mb-4">
                {post.excerpt}
              </p>
              
              <a
                href={`/blog/${post.slug}`}
                class="font-body text-accent hover:text-accent/80 font-medium transition-colors"
              >
                Weiterlesen →
              </a>
            </div>
          </article>
        ))}
      </div>
    ) : (
      <div class="text-center">
        <p class="font-body text-muted">
          Bald findest du hier spannende Artikel rund um Kindergeburtstage.
        </p>
      </div>
    )}
    
    <div class="text-center mt-8">
      <a
        href="/blog"
        class="inline-flex items-center px-6 py-3 bg-accent hover:bg-accent/90 text-ink rounded-lg font-semibold transition-colors"
      >
        Alle Artikel ansehen
      </a>
    </div>
  </div>
</section>