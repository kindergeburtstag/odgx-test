---
interface Props {
  title: string;
  text: string;
  image?: string;
}

const { title, text, image } = Astro.props;
---

<section class="bg-bg">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
      <div>
        <h2 class="font-display text-3xl md:text-4xl font-bold text-ink tracking-tight mb-6">
          {title}
        </h2>
        <div class="font-body text-muted leading-relaxed prose prose-lg max-w-none">
          {text.split('\n\n').map((paragraph) => (
            <p class="mb-4">{paragraph}</p>
          ))}
        </div>
      </div>
      
      {image && (
        <div>
          <img
            src={image}
            alt="Ãœber uns"
            class="w-full h-auto rounded-2xl shadow-lg"
            loading="lazy"
          />
        </div>
      )}
    </div>
  </div>
</section>