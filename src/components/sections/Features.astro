---
interface Props {
  title: string;
  items: Array<{
    name: string;
    description?: string;
    icon?: string;
    image?: string;
  }>;
}

const { title, items } = Astro.props;
---

<section class="bg-paper">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 py-12 md:py-16">
    <h2 class="font-display text-3xl md:text-4xl font-bold text-ink tracking-tight text-center mb-12">
      {title}
    </h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {items.map((item) => (
        <div class="bg-bg rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow">
          {item.image && (
            <img
              src={item.image}
              alt={item.name}
              class="w-full h-48 object-cover rounded-lg mb-4"
              loading="lazy"
            />
          )}
          
          {item.icon && !item.image && (
            <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center mb-4">
              <span class="text-2xl">{item.icon}</span>
            </div>
          )}
          
          <h3 class="font-body text-lg font-semibold text-ink mb-2">
            {item.name}
          </h3>
          
          {item.description && (
            <p class="font-body text-muted">
              {item.description}
            </p>
          )}
        </div>
      ))}
    </div>
  </div>
</section>