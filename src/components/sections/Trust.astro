---
interface Props {
  title: string;
  logos?: Array<{ src: string; alt: string }>;
  quotes?: Array<{ text: string; author: string; role?: string }>;
}

const { title, logos = [], quotes = [] } = Astro.props;
---

<section class="bg-paper">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 py-12 md:py-16">
    <h2 class="font-display text-3xl md:text-4xl font-bold text-ink tracking-tight text-center mb-12">
      {title}
    </h2>
    
    {logos.length > 0 && (
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-60">
        {logos.map((logo) => (
          <img
            src={logo.src}
            alt={logo.alt}
            class="h-12 w-auto grayscale hover:grayscale-0 transition-all"
            loading="lazy"
          />
        ))}
      </div>
    )}
    
    {quotes.length > 0 && (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {quotes.map((quote) => (
          <div class="bg-bg rounded-2xl p-6 shadow-sm">
            <div class="mb-4">
              <svg class="w-8 h-8 text-accent opacity-50" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-10zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
              </svg>
            </div>
            <blockquote class="font-body text-muted mb-4">
              "{quote.text}"
            </blockquote>
            <cite class="font-body text-ink font-semibold not-italic">
              {quote.author}
              {quote.role && <span class="text-muted font-normal">, {quote.role}</span>}
            </cite>
          </div>
        ))}
      </div>
    )}
  </div>
</section>