---
interface Props {
  title: string;
  left: string[];
  right: string[];
  caption?: string;
}

const { title, left, right, caption } = Astro.props;
---

<section class="bg-bg">
  <div class="max-w-6xl mx-auto px-4 md:px-6 lg:px-8 py-12 md:py-16">
    <h2 class="font-display text-3xl md:text-4xl font-bold text-ink tracking-tight text-center mb-12">
      {title}
    </h2>
    
    <div class="grid lg:grid-cols-2 gap-8">
      <div class="bg-paper rounded-2xl p-8 shadow-sm">
        <h3 class="font-body text-xl font-semibold text-ink mb-6 text-center">
          Option A
        </h3>
        <ul class="space-y-4">
          {left.map((item) => (
            <li class="flex items-start">
              <svg class="w-5 h-5 text-sage mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="font-body text-muted">{item}</span>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="bg-paper rounded-2xl p-8 shadow-sm">
        <h3 class="font-body text-xl font-semibold text-ink mb-6 text-center">
          Option B
        </h3>
        <ul class="space-y-4">
          {right.map((item) => (
            <li class="flex items-start">
              <svg class="w-5 h-5 text-peach mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="font-body text-muted">{item}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    {caption && (
      <p class="font-body text-muted text-center mt-8 italic">
        {caption}
      </p>
    )}
  </div>
</section>